	"Class": {
		"prefix": ["class"],
		"body": [
		  "local ${0:$TM_FILENAME_BASE} = {}",
		  "${0:$TM_FILENAME_BASE}.__index = ${0:$TM_FILENAME_BASE}",
		  "",
		  "function ${0:$TM_FILENAME_BASE}.new()",
		  "\treturn setmetatable({",
		  "\tvar = 100,",
		  "\t}, ${0:$TM_FILENAME_BASE})",
		  "end",
		  "",
		  "function ${0:$TM_FILENAME_BASE}:update(dt)",
